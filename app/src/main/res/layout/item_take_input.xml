<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/sw600_15dp">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="@dimen/sw600_100dp"
        android:src="@mipmap/icon_parent_1"
        android:layout_height="@dimen/sw600_100dp" />

    <EditText
        style="@style/App_EditView_Base"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw600_80dp"
        android:layout_toRightOf="@+id/iv_img"
        android:paddingLeft="@dimen/sw600_15dp"
        android:paddingRight="@dimen/sw600_15dp"
        android:layout_marginLeft="@dimen/sw600_25dp"
        android:layout_marginRight="@dimen/sw600_25dp"
        android:background="@drawable/btn_bk_wilhte_rang" />

</RelativeLayout>