<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw600_150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="@dimen/sw600_60dp">

        <TextView
            android:id="@+id/tv_time"
            style="@style/TextView_Base"
            android:layout_width="@dimen/sw600_80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="12:12" />

        <RelativeLayout
            android:layout_width="@dimen/sw600_100dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/sw600_40dp"
                android:layout_height="@dimen/sw600_40dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/date_img" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/sw600_85dp"
                android:background="@color/sino_white_99" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/sw600_120dp"
            android:layout_height="@dimen/sw600_120dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_context"
                style="@style/Main_Menu_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sw600_10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="" />

            <TextView
                android:id="@+id/tv_usertime"
                style="@style/Main_Menu_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sw600_10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>