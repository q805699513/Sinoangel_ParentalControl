<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:padding="@dimen/sw600_15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="@dimen/sw600_20dp"
        android:layout_height="@dimen/sw600_40dp"
        android:src="@mipmap/back" />

    <TextView
        style="@style/Main_Title_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部推荐"
        android:layout_marginLeft="@dimen/sw600_15dp"
        android:textSize="@dimen/sw600_26sp" />

    <TextView
        style="@style/Main_Title_TextView"
        android:layout_width="wrap_content"
        android:layout_marginLeft="@dimen/sw600_5dp"
        android:layout_height="wrap_content"
        android:text="(999+)"
        android:textSize="@dimen/sw600_26sp" />
</LinearLayout>