<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw600_150dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/sw600_80dp"
        android:paddingRight="@dimen/sw600_60dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="@dimen/sw600_100dp"
                android:layout_height="@dimen/sw600_100dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/date_img" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_below="@id/iv1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/sw600_f15dp"
                android:background="@color/sino_white_99" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_context"
            style="@style/Main_Menu_TextView"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/sw600_50dp"
            android:background="@drawable/btn_bk_wilhte"
            android:paddingLeft="@dimen/sw600_30dp"
            android:paddingRight="@dimen/sw600_30dp"
            android:text="@string/abou_title" />

    </LinearLayout>

</RelativeLayout>