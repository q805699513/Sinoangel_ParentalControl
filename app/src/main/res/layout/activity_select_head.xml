<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">


    <ImageView
        android:id="@+id/iv_back"
        style="@style/App_ImageView_Back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Main_Title_TextView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sw600_20dp"
        android:gravity="center"
        android:text="@string/register_fix_head" />


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/sw600_200dp"
        android:layout_height="@dimen/sw600_200dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sw600_65dp"
        android:src="@mipmap/icon_parent_1" />

    <LinearLayout
        android:id="@+id/pos1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="@dimen/sw600_25dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_sele_head1"
            android:layout_width="@dimen/sw600_120dp"
            android:layout_height="@dimen/sw600_120dp"
            android:src="@mipmap/icon_parent_1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_sele_head2"
            android:layout_width="@dimen/sw600_120dp"
            android:layout_height="@dimen/sw600_120dp"
            android:src="@mipmap/icon_parent_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_sele_head3"
            android:layout_width="@dimen/sw600_120dp"
            android:layout_height="@dimen/sw600_120dp"
            android:src="@mipmap/icon_parent_3" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pos1"
        android:layout_marginTop="@dimen/sw600_25dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_sele_head4"
            android:layout_width="@dimen/sw600_120dp"
            android:layout_height="@dimen/sw600_120dp"
            android:src="@mipmap/icon_parent_4" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_sele_head5"
            android:layout_width="@dimen/sw600_120dp"
            android:layout_height="@dimen/sw600_120dp"
            android:src="@mipmap/icon_parent_5" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_sele_head6"
            android:layout_width="@dimen/sw600_120dp"
            android:layout_height="@dimen/sw600_120dp"
            android:src="@mipmap/icon_parent_6" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:id="@+id/btn_ok"
        style="@style/App_Button_TextView"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/sw600_45dp"
        android:background="@drawable/btn_bk_orange"
        android:text="@string/btn_ok" />
</RelativeLayout>
