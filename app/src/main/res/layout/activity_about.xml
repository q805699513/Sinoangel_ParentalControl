<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/App_ImageView_Back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Main_Title_TextView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sw600_20dp"
        android:gravity="center"
        android:text="@string/abou_title" />




    <RelativeLayout
        android:id="@+id/helplayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw600_450dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sw600_275dp"
        android:layout_below="@+id/tv_title"
        android:padding="@dimen/sw600_20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/sw600_30dp"
            android:background="@mipmap/help_back">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/sw600_50dp"
                android:layout_marginLeft="@dimen/sw600_30dp"
                android:layout_marginRight="@dimen/sw600_30dp"
                android:layout_marginTop="@dimen/sw600_30dp"></android.support.v4.view.ViewPager>

        </LinearLayout>

        <RadioGroup
            android:id="@+id/rg_dian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/sw600_90dp"
            android:orientation="horizontal"></RadioGroup>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_code"
        android:layout_width="@dimen/sw600_400dp"
        android:layout_height="@dimen/sw600_400dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sw600_20dp"
        android:src="@mipmap/logo_ms" />

</RelativeLayout>
