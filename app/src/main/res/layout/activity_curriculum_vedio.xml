<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg"
    android:orientation="vertical"
    android:overScrollMode="never">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.youku.cloud.player.YoukuPlayerView
            android:id="@+id/baseview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/sw600_15dp"
            android:paddingRight="@dimen/sw600_15dp">

            <TextView
                style="@style/Main_Menu_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/abou_title" />

            <TextView
                style="@style/TextView_Base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sw600_10dp"
                android:background="@drawable/btn_bk_wilhte_rang_rect"
                android:paddingLeft="@dimen/sw600_30dp"
                android:paddingRight="@dimen/sw600_30dp"
                android:text="@string/btn_booking" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                style="@style/TextView_Base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20" />

            <RadioButton
                android:layout_width="@dimen/sw600_50dp"
                android:layout_height="@dimen/sw600_50dp"
                android:background="@drawable/rb_zan"
                android:button="@null" />

            <ImageView
                android:layout_width="@dimen/sw600_50dp"
                android:layout_height="@dimen/sw600_50dp"
                android:src="@mipmap/csi_a_take" />

            <ImageView
                android:layout_width="@dimen/sw600_50dp"
                android:layout_height="@dimen/sw600_50dp"
                android:src="@mipmap/csi_a_share" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/sw600_10dp"
            android:background="@color/sino_white_11" />

        <ImageView
            android:layout_width="match_parent"
            android:src="@mipmap/img1"
            android:layout_height="@dimen/sw600_500dp" />
    </LinearLayout>
</ScrollView>
