<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="@dimen/sw600_450dp"
        android:layout_height="@dimen/sw600_500dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_bk_while">

        <TextView
            android:id="@+id/tv_title"
            style="@style/Main_Title_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw600_50dp"
            android:gravity="center"
            android:paddingLeft="@dimen/sw600_15dp"
            android:paddingRight="@dimen/sw600_15dp"
            android:textSize="@dimen/sw600_30sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/sw600_15dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_ok"
                android:layout_width="@dimen/sw600_80dp"
                android:layout_height="@dimen/sw600_80dp"
                android:src="@mipmap/btn_ok"/>

            <ImageView
                android:id="@+id/btn_no"
                android:layout_width="@dimen/sw600_80dp"
                android:layout_height="@dimen/sw600_80dp"
                android:layout_marginLeft="@dimen/sw600_100dp"
                android:src="@mipmap/btn_cannel" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>