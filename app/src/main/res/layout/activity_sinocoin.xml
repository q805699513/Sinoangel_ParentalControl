<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/App_ImageView_Back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Main_Title_TextView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sw600_20dp"
        android:gravity="center"
        android:text="@string/sinocoin_title" />

    <LinearLayout
        android:id="@+id/lab1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title"
        android:layout_marginTop="@dimen/sw600_50dp"
        android:padding="@dimen/sw600_40dp">

        <TextView
            style="@style/TextView_Base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sinocoin_remain" />

        <TextView
            android:id="@+id/tv_yue"
            style="@style/TextView_Base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lab1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/sw600_10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_coin1"
            style="@style/App_Button_TextView"
            android:layout_width="@dimen/sw600_450dp"
            android:background="@drawable/btn_bk_wilhte_rang"
            android:text="100星币" />

        <TextView
            android:id="@+id/btn_coin2"
            style="@style/App_Button_TextView"
            android:layout_width="@dimen/sw600_450dp"
            android:layout_marginTop="@dimen/sw600_50dp"
            android:background="@drawable/btn_bk_wilhte_rang"
            android:text="300星币" />

        <TextView
            android:id="@+id/btn_coin3"
            style="@style/App_Button_TextView"
            android:layout_width="@dimen/sw600_450dp"
            android:layout_marginTop="@dimen/sw600_50dp"
            android:background="@drawable/btn_bk_wilhte_rang"
            android:text="600星币" />

        <TextView
            android:id="@+id/btn_coin4"
            style="@style/App_Button_TextView"
            android:layout_width="@dimen/sw600_450dp"
            android:layout_marginTop="@dimen/sw600_50dp"
            android:background="@drawable/btn_bk_wilhte_rang"
            android:text="1000星币" />
    </LinearLayout>

</RelativeLayout>
