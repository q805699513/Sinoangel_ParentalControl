<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/sw600_10dp">

        <ImageView
            android:id="@+id/iv_webicon"
            android:padding="@dimen/sw600_5dp"
            android:layout_width="@dimen/sw600_90dp"
            android:layout_height="@dimen/sw600_90dp"
            android:src="@mipmap/edit" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/Main_Menu_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="@dimen/sw600_60dp"
            android:layout_height="@dimen/sw600_60dp"
            android:layout_marginLeft="@dimen/sw600_10dp"
            android:src="@mipmap/edit" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/sw600_60dp"
            android:layout_height="@dimen/sw600_60dp"
            android:layout_marginLeft="@dimen/sw600_10dp"
            android:src="@mipmap/delete" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_box"
        android:background="@color/sino_white_11" />

</RelativeLayout>