<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">

    <ImageView
        android:id="@+id/iv_back"
        style="@style/App_ImageView_Back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Main_Title_TextView"
        android:layout_width="match_parent"
        android:text="@string/feedback_title" />

    <EditText
        android:id="@+id/tv_context"
        style="@style/App_EditView_Base"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sw600_400dp"
        android:layout_below="@+id/tv_title"
        android:gravity="start"
        android:layout_marginTop="@dimen/sw600_80dp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/sw600_25dp"
        android:layout_marginLeft="@dimen/sw600_50dp"
        android:layout_marginRight="@dimen/sw600_50dp"
        android:background="@drawable/btn_bk_gray" />

    <TextView
        android:id="@+id/btn_send"
        style="@style/App_Button_TextView"
        android:layout_width="@dimen/sw600_430dp"
        android:layout_below="@+id/tv_context"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/sw600_50dp"
        android:background="@drawable/btn_bk_orange"
        android:text="@string/btn_save" />

</RelativeLayout>