<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/sw600_20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/sw600_150dp"
                android:layout_height="@dimen/sw600_150dp"
                android:src="@mipmap/icon_kids_1" />

            <ImageView
                android:id="@+id/iv_theme"
                android:layout_width="@dimen/sw600_150dp"
                android:layout_height="@dimen/sw600_150dp"
                android:layout_marginLeft="@dimen/sw600_10dp"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_theme1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/sw600_10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/sw600_50dp"
                        android:layout_height="@dimen/sw600_50dp"
                        android:background="@color/sino_white" />

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextView_Base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sw600_10dp"
                        android:lines="1"
                        android:minWidth="@dimen/sw600_200dp"
                        android:paddingBottom="@dimen/sw600_5dp"
                        android:paddingLeft="@dimen/sw600_15dp"
                        android:paddingRight="@dimen/sw600_15dp"
                        android:paddingTop="@dimen/sw600_5dp"
                        android:text="姓名" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sw600_5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/sw600_50dp"
                        android:layout_height="@dimen/sw600_50dp"
                        android:background="@color/sino_white" />

                    <TextView
                        android:id="@+id/tv_birthday"
                        style="@style/TextView_Base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sw600_10dp"
                        android:lines="1"
                        android:minWidth="@dimen/sw600_200dp"
                        android:paddingBottom="@dimen/sw600_5dp"
                        android:paddingLeft="@dimen/sw600_15dp"
                        android:paddingRight="@dimen/sw600_15dp"
                        android:paddingTop="@dimen/sw600_5dp"
                        android:text="姓名" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/sw600_5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/sw600_50dp"
                        android:layout_height="@dimen/sw600_50dp"
                        android:background="@color/sino_white" />

                    <TextView
                        android:id="@+id/tv_sex"
                        style="@style/TextView_Base"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/sw600_10dp"
                        android:lines="1"
                        android:minWidth="@dimen/sw600_200dp"
                        android:paddingBottom="@dimen/sw600_5dp"
                        android:paddingLeft="@dimen/sw600_15dp"
                        android:paddingRight="@dimen/sw600_15dp"
                        android:paddingTop="@dimen/sw600_5dp"
                        android:text="姓名" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sw600_10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="@dimen/sw600_60dp"
                android:layout_height="@dimen/sw600_60dp"
                android:src="@mipmap/edit" />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="@dimen/sw600_60dp"
                android:layout_height="@dimen/sw600_60dp"
                android:layout_marginLeft="@dimen/sw600_50dp"
                android:src="@mipmap/delete" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/ll_box"
        android:background="@color/sino_white_11" />
</RelativeLayout>