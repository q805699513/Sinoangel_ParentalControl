<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_bg">


    <ImageView
        android:id="@+id/iv_back"
        style="@style/App_ImageView_Back" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/Main_Title_TextView"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sw600_20dp"
        android:gravity="center"
        android:text="@string/kidaccount_add" />


    <ImageView
        android:id="@+id/iv_head"
        android:layout_width="@dimen/sw600_200dp"
        android:layout_height="@dimen/sw600_200dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/sw600_65dp"
        android:src="@mipmap/icon_kids_1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_head"
        android:layout_marginTop="@dimen/sw600_15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sw600_50dp"
            android:layout_marginRight="@dimen/sw600_50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/sw600_70dp"
                android:layout_height="@dimen/sw600_70dp"
                android:src="@mipmap/ico_nikname" />

            <EditText
                android:id="@+id/et_userName"
                style="@style/App_EditView_Base"
                android:layout_marginLeft="@dimen/sw600_15dp"
                android:inputType="textPersonName"
                android:lines="1"
                android:maxLength="18" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sw600_5dp"
            android:background="@color/sino_white_11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sw600_50dp"
            android:layout_marginRight="@dimen/sw600_50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/sw600_70dp"
                android:layout_height="@dimen/sw600_70dp"
                android:src="@mipmap/ico_birday" />

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/App_EditView_Base"
                android:layout_marginLeft="@dimen/sw600_15dp"
                android:lines="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sw600_5dp"
            android:background="@color/sino_white_11" />

        <RadioGroup
            android:id="@+id/rg_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sw600_50dp"
            android:layout_marginRight="@dimen/sw600_50dp"
            android:layout_marginTop="@dimen/sw600_10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/sw600_70dp"
                android:layout_height="@dimen/sw600_70dp"
                android:src="@mipmap/ico_sex" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rb_sex_boy"
                android:layout_width="@dimen/sw600_40dp"
                android:layout_height="@dimen/sw600_40dp"
                android:layout_marginLeft="@dimen/sw600_15dp"
                android:background="@drawable/rb_dian"
                android:button="@null" />

            <TextView
                style="@style/TextView_Base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_user_boy" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <RadioButton
                android:id="@+id/rb_sex_girl"
                android:layout_width="@dimen/sw600_40dp"
                android:layout_height="@dimen/sw600_40dp"
                android:layout_marginLeft="@dimen/sw600_15dp"
                android:background="@drawable/rb_dian"
                android:button="@null" />

            <TextView
                style="@style/TextView_Base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_user_girl" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginRight="@dimen/sw600_80dp"
                android:layout_weight="1" />
        </RadioGroup>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/sw600_5dp"
            android:background="@color/sino_white_11" />

        <RadioGroup
            android:id="@+id/rg_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/sw600_50dp"
            android:layout_marginRight="@dimen/sw600_50dp"
            android:layout_marginTop="@dimen/sw600_10dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_theme1"
                android:layout_width="@dimen/sw600_150dp"
                android:layout_height="@dimen/sw600_150dp"
                android:background="@mipmap/icon_theme1" />

            <RadioButton
                android:id="@+id/rb_theme2"
                android:layout_width="@dimen/sw600_150dp"
                android:layout_height="@dimen/sw600_150dp"
                android:layout_marginLeft="@dimen/sw600_15dp"
                android:background="@mipmap/icon_theme2" />

            <RadioButton
                android:id="@+id/rb_theme3"
                android:layout_width="@dimen/sw600_150dp"
                android:layout_height="@dimen/sw600_150dp"
                android:layout_marginLeft="@dimen/sw600_15dp"
                android:background="@mipmap/icon_theme3" />
        </RadioGroup>

        <TextView
            android:id="@+id/btn_register"
            style="@style/App_Button_TextView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/sw600_25dp"
            android:background="@drawable/btn_bk_orange"
            android:text="@string/register_title" />
    </LinearLayout>


</RelativeLayout>
